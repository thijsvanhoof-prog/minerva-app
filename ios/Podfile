# Minimum iOS 13.0 (Flutter/CocoaPods vereist)
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Voorkom "specs too out-of-date". Bij OneSignal-versiewissel: scripts/ios_pod_fix.sh
pre_install do |installer|
  system('pod repo update')
end

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  flutter_engine = File.join(flutter_root, 'bin', 'cache', 'artifacts', 'engine')
  flutter_debug = File.join(flutter_engine, 'ios', 'Flutter.xcframework', 'ios-arm64')
  flutter_release = File.join(flutter_engine, 'ios-release', 'Flutter.xcframework', 'ios-arm64')

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      # OneSignal: Flutter.h vinden, umbrella-header, nullability, module verifier
      if target.name.downcase.include?('onesignal')
        config.build_settings['GCC_WARN_NULL_PASSED_TO_NON_NULL_PARAMETER'] = 'NO'
        config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
        config.build_settings['CLANG_WARN_DEPRECATED_OBJC_IMPLEMENTATIONS'] = 'NO'
        config.build_settings['GCC_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
        config.build_settings['ENABLE_MODULE_VERIFIER'] = 'NO'
        # Expliciet Flutter framework + header paths voor Archive-builds
        path = config.type == :debug ? flutter_debug : flutter_release
        header_path = File.join(path, 'Flutter.framework', 'Headers')
        config.build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphoneos*]'] = "\"#{path}\" $(inherited)"
        config.build_settings['HEADER_SEARCH_PATHS[sdk=iphoneos*]'] = "\"#{header_path}\" $(inherited)"
        sim_dir = config.type == :debug ? File.join(flutter_engine, 'ios') : File.join(flutter_engine, 'ios-release')
        sim_path = File.join(sim_dir, 'Flutter.xcframework', 'ios-arm64_x86_64-simulator')
        sim_header = File.join(sim_path, 'Flutter.framework', 'Headers')
        config.build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphonesimulator*]'] = "\"#{sim_path}\" $(inherited)"
        config.build_settings['HEADER_SEARCH_PATHS[sdk=iphonesimulator*]'] = "\"#{sim_header}\" $(inherited)"
        extra = '-w -Wno-nonnull -Wno-incompatible-pointer-types -Wno-incomplete-implementation -Wno-incomplete-umbrella'
        wrap = lambda { |v| v.is_a?(Array) ? v.join(' ') : (v || '$(inherited)') }
        config.build_settings['WARNING_CFLAGS'] = "#{wrap.call(config.build_settings['WARNING_CFLAGS'])} #{extra}"
        config.build_settings['OTHER_CFLAGS'] = "#{wrap.call(config.build_settings['OTHER_CFLAGS'])} #{extra}"
      end
      # url_launcher Swift deprecation (keyWindow)
      if target.name.include?('url_launcher')
        config.build_settings['CLANG_WARN_DEPRECATED_OBJC_IMPLEMENTATIONS'] = 'NO'
        sw = config.build_settings['OTHER_SWIFT_FLAGS']
        sw = sw.is_a?(Array) ? sw.join(' ') : (sw || '$(inherited)')
        config.build_settings['OTHER_SWIFT_FLAGS'] = "#{sw} -suppress-warnings"
      end
    end
  end
end
